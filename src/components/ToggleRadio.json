{
  "namespace": "radio_toggle",

  "radio_toggle": {
    "type": "panel",
    "size": [270, 18],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$checked_tgl_bg": "radio_toggle.box_default",
    "$unchecked_tgl_bg": "screen.empty_panel",
    "$checkedhov_tgl_bg": "radio_toggle.box_hover",
    "$uncheckedhov_tgl_bg": "radio_toggle.box_hover",
    "$checkedlkd_tgl_bg": "radio_toggle.box_default",
    "$uncheckedlkd_tgl_bg": "screen.empty_panel",
    "controls": [ { "ctrl@radio_toggle.radio_tgl_ctrl": {} } ]
  },

  "radio_tgl_ctrl@toggle.toggle": {
    "$tgl_group": true,
    "$tgl_nm|default": "$tgl_state_bdg_nm",
    "$tgl_enabled_bdg_nm": "$opt_enabled_bdg_nm",
    "enabled": "$enabled",
    "$enabled|default": true,
    "$tgl_enabled_bdg_type": "global",
    "bindings": [
      { "binding_type": "$tgl_enabled_bdg_type",
        "binding_name": "$opt_enabled_bdg_nm",
        "binding_name_override": "#enabled"
      }
    ],
    "variables": [
      { "requires": "(not $opt_enabled_bdg_nm or not $enabled)",
        "$tgl_enabled_bdg_nm": "#not_data_bound",
        "$tgl_enabled_bdg_type": "none"
      }
    ]
  },
  
  "box_default": {
    "type": "image",
    "texture": "src/assets/custom/textures/static/box"
  },

  "box_hover": {
    "type": "image",
    "texture": "src/assets/custom/textures/static/box_hover"
  }
}