{
  "namespace": "toggle_button",

  "toggle_button": {
    "type": "panel",
    "size": [150, 20],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$tgl_text|default": "",
    "$tgl_group": true,
    "$tgl_ctrl_nm|default": "this_toggle",
    "$tgl_cont|default": "toggle_button.tgl_btn_label",
    "controls": [ { "$tgl_ctrl_nm@toggle.toggle": {} } ]
  },

  "tgl_btn_label@button.button_label": {
    "text": "$tgl_text",
    "bindings": "$tgl_text_bdgs",
    "$tgl_text_bdgs|default": []
  }
}